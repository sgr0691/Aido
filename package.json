{
  "name": "aido",
  "version": "0.1.0",
  "description": "Run AI-generated code safely against real infrastructure",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "aido": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
