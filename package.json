{
  "name": "aido",
  "version": "0.1.0",
  "description": "Run AI-generated code safely against real infrastructure",
  "main": "dist/index.js",
  "bin": {
    "aido": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "ai",
    "sandbox",
    "docker",
    "cli",
    "code-execution",
    "security"
  ],
  "author": "Sergio Rovira",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sgr0691/Aido.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "dockerode": "^4.0.2",
    "nanoid": "^5.0.5",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.26",
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
