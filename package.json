  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "dockerode": "^4.0.4",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.34",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.0",
    "eslint": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
